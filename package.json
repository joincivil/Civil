{
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "build": "lerna run build --sort",
    "watch": "lerna run --parallel build:watch",
    "lint": "lerna run lint --parallel",
    "prettier": "prettier --config .prettierrc.yaml --write --list-different './**/*.{ts,tsx,json,md}'",
    "prettier:ci": "prettier --config .prettierrc.yaml --list-different '**/*.{ts,tsx,json,md}'",
    "clean": "lerna run clean --parallel",
    "test": "lerna run test --stream --sort",
    "lerna:run": "lerna run",
    "prepare": "lerna run prepare --no-sort",
    "ganache": "ganache-cli -p 8545 --networkId 50 -d -m \"${npm_package_config_mnemonic}\" --noVMErrorsOnRPCResponse",
    "serve:dapp": "cd ./packages/dapp && serve -s build",
    "publish:docs": "cp -a ./packages/contracts/doxity/public ./docs"
  },
  "config": {
    "mnemonic": "notice tobacco baby curious trade other capable invite cable thunder file equal"
  },
  "license": "(Apache-2.0 OR LGPL-2.1-only)",
  "devDependencies": {
    "ganache-cli": "^6.1.0-beta.4",
    "lerna": "^2.9.0",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.11.1"
  }
}

{
  "name": "@joincivil/core",
  "version": "1.3.0",
  "description": "The core library allowing for interfacing with the whole Civil ecosystem",
  "main": "build/src/index.js",
  "types": "build/src/index.d.ts",
  "scripts": {
    "build": "run-s generate tsc build:copyArtifacts",
    "build:copyArtifacts": "copyfiles -u 2 './src/artifacts/**/*.json' ./build/src/artifacts",
    "lint": "tslint --project ./",
    "generate": "run-p generate:*",
    "generate:contracts": "abi-gen --abis 'src/artifacts/**/*.json' --template 'src/templates/contract/contract.handlebars' --partials 'src/templates/contract/partials/**/*.handlebars' --output 'src/contracts/generated/'",
    "generate:artifacts": "node ../dev-utils/build/generate-from-files/bin.js 'src/artifacts/**/*.json' 'src/templates/artifacts.handlebars' 'src/contracts/generated/artifacts.ts'",
    "test": "mocha build/test/**/*_test.js",
    "tsc": "tsc",
    "prepublishOnly": "run-s build lint test",
    "clean": "rimraf build/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joincivil/civil.ts.git"
  },
  "author": "The Civil Media Company",
  "bugs": {
    "url": "https://github.com/joincivil/civil.ts/issues"
  },
  "homepage": "https://github.com/joincivil/civil.ts#readme",
  "devDependencies": {
    "@0xproject/abi-gen": "^0.1.1",
    "@joincivil/dev-utils": "^1.0.1",
    "@joincivil/tslint-rules": "^2.4.0",
    "@types/chai": "^4.1.1",
    "@types/chai-as-promised": "^7.1.0",
    "@types/debug": "0.0.30",
    "@types/lodash": "^4.14.92",
    "@types/mocha": "^2.2.46",
    "@types/underscore": "^1.8.6",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-bignumber": "^2.0.2",
    "copyfiles": "^1.2.0",
    "dirty-chai": "^2.0.1",
    "mocha": "^5.0.0",
    "npm-run-all": "^4.1.2",
    "rimraf": "^2.6.2",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2",
    "web3-typescript-typings": "^0.9.11"
  },
  "dependencies": {
    "@joincivil/utils": "^1.0.0",
    "bignumber.js": "^5.0.0",
    "debug": "^3.1.0",
    "ethereumjs-blockstream": "^3.1.0",
    "lodash": "^4.17.4",
    "rxjs": "^5.5.6",
    "web3": "^0.20.3"
  }
}

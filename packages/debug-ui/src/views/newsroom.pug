extends base

block scripts
  script(src="/assets/js/newsroom.js")

block content
  content#state State: 
  br

  div(style = "border : thick solid #0000FF")#application.hidden
    h3 Applying
    #applicationInfo info...

  div(style = "border : thick solid #0000FF")#challenge.hidden
    h3 Challenge
    #challengeInfo info...
    br
    div#commitVote.hidden
      | Commit Vote in Challenge
      br
      | challengeID
      input#param-commitVotePollId(type="text")
      | option
      input#param-commitVoteOption(type="text")
      | salt
      input#param-commitVoteSalt(type="text")
      | numTokens
      input#param-commitNumTokens(type="text")
      button#param-commitVote Commit Vote
    div#revealVote.hidden
      | Reveal Vote in Challenge
      br
      | challengeID
      input#param-revealVotePollId(type="text")
      | option
      input#param-revealVoteOption(type="text")
      | salt
      input#param-revealVoteSalt(type="text")
      button#param-revealVote Reveal Vote


  div(style = "border : thick solid #0000FF")#appeal.hidden
    h3 Appeal
    #appealInfo info...

  div(style = "border : thin solid #0000FF")#resolvedChallenges.hidden
    h3 Resolved Challenges. 
    #resolvedChallengesInfo Challenges: 
    br
    | pollID:  
    input#param-claimRewardChallengeID(type="text")
    | salt: 
    input#param-claimRewardSalt(type="text")
    button#param-claimReward(type="text") Claim Reward

  | Apply to TCR
  button#param-applyToTCR Apply To TCR
  br

  | Challenge TCR Listing
  button#param-challengeTCRListing Challenge TCR Listing
  br

  | Update Listing
  button#param-updateListingStatus Update Listing
  br

  | Propose and Approve Article
  button#param-proposeAndApprove Propose and Approve
  br



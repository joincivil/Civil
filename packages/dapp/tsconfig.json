{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "build/dist",
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ],
  "include": [
    "./**/*.ts",
    "./**/*.tsx"
  ],
  "types": [ "react", "jest" ]
}
